general {
        colors = true
        interval = 5
        separator = ""
}

order += "disk /"
order += "ethernet _first_"
order += "tztime local"

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = " %ip (%speed)"
        format_down = " down"
}

tztime local {
        format = " %a, %B %d   %H:%M:%S"
}

disk "/" {
        format = " %avail"
}
